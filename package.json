{
  "name": "@root/dream",
  "version": "1.0.0",
  "description": "Root package to connect other services [web, server, worker, auth, docker]",
  "author": "Kamil Alekber",
  "license": "MIT",
  "private": true,
  "scripts": {
    "server:add": "yarn workspace @dream/server --use-yarnrc .yarnrc add",
    "server:add:dev": "yarn workspace @dream/server --use-yarnrc .yarnrc add --dev",

    "web:add": "yarn workspace @dream/web --use-yarnrc .yarnrc add",
    "web:add:dev": "yarn workspace @dream/web --use-yarnrc .yarnrc add --dev",
    "web:dev": "yarn workspace @dream/web run dev",
    "web:build": "yarn workspace @dream/web run build",
    "web:start": "yarn workspace @dream/web run start",

    "auth:add": "yarn workspace @dream/auth --use-yarnrc .yarnrc add",
    "auth:add:dev": "yarn workspace @dream/auth --use-yarnrc .yarnrc add --dev",
    "auth:dev": "yarn workspace @dream/auth run dev",

    "docker:dev": "$GOPATH/bin/modd --bell --notify --debug --file ./services/docker/modd.conf",

    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "dev": "yarn workspaces run dev",
    
    "compose:up": "docker-compose up",
    "compose:down": "docker-compose down",
    "compose:prune": "docker-compose down -v --rmi local"
  },
  "workspaces": [
   "services/*"
  ]
}